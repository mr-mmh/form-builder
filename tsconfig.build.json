{
    "compilerOptions": {
        "rootDir": "src",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": false,
        "isolatedModules": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleDetection": "force",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "jsx": "react-jsx",
        "strictNullChecks": true,
        "types": ["react/canary", "node"],
        "allowJs": true,
        "outDir": "dist",
        "sourceMap": true,
        "composite": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src", "example"],
    "exclude": ["node_modules", "dist"]
}
